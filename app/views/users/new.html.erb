<%= form_with model: @user do |form| %>
    <%= form.text_field :username %>
    <%= form.text_field :email %>
    <%= form.text_field :password %>
    <%= form.submit "Create" %>
<% end %>

<style>
    form {
        display: flex;
        flex-direction: column;
        width: 350px;
        gap: 5px;
    }
    input {
        padding: 7px;
    }
</style>